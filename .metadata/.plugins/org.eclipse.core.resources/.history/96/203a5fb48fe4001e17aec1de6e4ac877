#include	"r01lib.h"
r01lib_start;	/* *** place this word before making instance of r01lib classes *** */

I2C		i2c;

DigitalOut	rst( D9, 1 );
DigitalOut	oe(  D8, 0 );

int main(void)
{
	PRINTF( "I2C output is available on D18/SDA and D19/SCL.\r\n" );
	PRINTF( "Pull-up resisters are required to connect I2C target(s)\r\n" );

	constexpr uint8_t	address		= 0xBC >> 1;
	uint8_t				w_data[]	= { 0x02, 0xAA, 0xAA, 0xAA, 0xAA };
	uint8_t				iref_data[]	= { 0x02, 0xAA, 0xAA, 0xAA, 0xAA };
	uint8_t				pwm_data[]	= { 0x08, 0x00 };

	i2c.write( address, w_data, sizeof( w_data ) );

	while ( true )
	{
		for ( int i = 0; i < 256; i++ )
		{
			pwm_data[ 1 ]	= i;
			i2c.write( address, pwm_data, sizeof( pwm_data ) );
			wait( 0.01 );
		}
	}
}
