#include	"r01lib.h"
r01lib_start;	/* *** place this word before making instance of r01lib classes *** */

#include	<core_cm33.h>

DigitalOut	r( RED   );

bool	flag	= false;

void SysTick_Handler( void )
{
	flag	= true;
}

int main(void)
{
	SysTick_Config( SystemCoreClock );

	while ( true )
	{
		if ( flag )
		{
			flag	= false;
			PRINTF( "!" )
		}

		r	= !r;
		wait( 0.2 );
	}
}
