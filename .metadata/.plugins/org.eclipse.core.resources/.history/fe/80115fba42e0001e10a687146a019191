#include	"r01lib.h"
r01lib_start;	/* *** place this word before making instance of r01lib classes *** */

bool	flag	= false;

void callback( void )
{
	flag	= true;
}

Ticker	t;


int main(void)
{
	t.attach( callback, 0.5 );

	unsigned long	count	= 0;

	while ( true )
	{
		if ( flag )
		{
			flag	= false;
			PTINTF( "Tick! (%ul)\r\n", count );
		}
	}
}
