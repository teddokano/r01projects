#include	"r01lib.h"
r01lib_start;	/* *** place this word before making instance of r01lib classes *** */

bool	flag0	= false;
bool	flag1	= false;

void callback0( void )
{
	flag0	= true;
}

Ticker	t0;


int main(void)
{
	sw2.rise( callback_sw2 );
	dp2.fall( callback_dp2 );

	while ( true )
	{
		if ( flag_sw2 )
		{
			flag_sw2	= false;
			PRINTF( "******* SW2 event!\r\n" );
		}

		if ( flag_dp2 )
		{
			flag_dp2	= false;
			PRINTF( "******* DP2 event!\r\n" );
		}

		PRINTF( "%d %d\r\n", sw2 & 1, dp2 & 1 );
		wait( 0.1 );
	}
}
